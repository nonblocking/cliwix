<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>at.nonblocking</groupId>
        <artifactId>cliwix</artifactId>
        <version>2.0.4-201608211649</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>cliwix-test-integration</artifactId>
    <version>2.0.4-201607161541</version>
    <name>Cliwix Integration Tests</name>

    <dependencies>
        <dependency>
            <groupId>at.nonblocking</groupId>
            <artifactId>cliwix-core</artifactId>
            <version>2.0.4-201607161541</version>
            <exclusions>
                <exclusion>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>util-java</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>at.nonblocking</groupId>
            <artifactId>cliwix-core-handlers-6-1</artifactId>
            <version>2.0.4-201607161541</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>at.nonblocking</groupId>
            <artifactId>cliwix-core-handlers-6-2</artifactId>
            <version>2.0.4-201607161541</version>
            <scope>runtime</scope>
        </dependency>


        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>${servlet.api.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet.jsp</groupId>
            <artifactId>javax.servlet.jsp-api</artifactId>
            <version>${jsp.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.portlet</groupId>
            <artifactId>portlet-api</artifactId>
            <version>${portlet.api.version}</version>
        </dependency>
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <version>2.3.3</version>
        </dependency>
        <dependency>
            <groupId>javax.transaction</groupId>
            <artifactId>jta</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>org.hibernate.javax.persistence</groupId>
            <artifactId>hibernate-jpa-2.0-api</artifactId>
            <version>1.0.1.Final</version>
        </dependency>
        <dependency>
            <groupId>com.sun.mail</groupId>
            <artifactId>javax.mail</artifactId>
            <version>1.5.0</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>CLIWIX_INTEGRATION_TEST_COMPILE_ONLY</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <dependencies>
                <dependency>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>portal-service</artifactId>
                    <version>${liferay.minimum.version}</version>
                    <scope>compile</scope>
                </dependency>
                <dependency>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>portal-impl</artifactId>
                    <version>${liferay.minimum.version}</version>
                    <scope>compile</scope>
                </dependency>
                <dependency>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-tx</artifactId>
                    <version>3.0.7.RELEASE</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>CLIWIX_INTEGRATION_TEST_LIFERAY_6_1_CE</id>

            <dependencies>
                <dependency>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>portal-service</artifactId>
                    <version>6.1.2</version>
                    <scope>system</scope>
                    <systemPath>${liferay.tomcat.folder}/lib/ext/portal-service.jar</systemPath>
                </dependency>
                <dependency>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>portal-impl</artifactId>
                    <version>6.1.2</version>
                    <scope>system</scope>
                    <systemPath>${liferay.tomcat.folder}/webapps/ROOT/WEB-INF/lib/portal-impl.jar</systemPath>
                </dependency>
                <dependency>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-tx</artifactId>
                    <version>3.0.7.RELEASE</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>integration-test</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <skip>false</skip>
                                    <!-- Some assertions fail during Liferay startup... -->
                                    <enableAssertions>false</enableAssertions>
                                    <argLine>-Xms1024m -Xmx1024m -XX:MaxPermSize=256m</argLine>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>CLIWIX_INTEGRATION_TEST_LIFERAY_6_1_EE</id>

            <dependencies>
                <dependency>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>portal-service</artifactId>
                    <version>6.1.20</version>
                    <scope>system</scope>
                    <systemPath>${liferay.tomcat.folder}/lib/ext/portal-service.jar</systemPath>
                </dependency>
                <dependency>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>portal-impl</artifactId>
                    <version>6.1.20</version>
                    <scope>system</scope>
                    <systemPath>${liferay.tomcat.folder}/webapps/ROOT/WEB-INF/lib/portal-impl.jar</systemPath>
                </dependency>
                <dependency>
