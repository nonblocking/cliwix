                            <execution>
                                <id>integration-test</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <skip>false</skip>
                                    <!-- Some assertions fail during Liferay startup... -->
                                    <enableAssertions>false</enableAssertions>
                                    <argLine>-Xms1024m -Xmx1024m -XX:MaxPermSize=256m</argLine>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>CLIWIX_INTEGRATION_TEST_LIFERAY_6_2_CE</id>

            <dependencies>
                <dependency>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>portal-service</artifactId>
                    <version>6.2.1</version>
                    <scope>system</scope>
                    <systemPath>${liferay.tomcat.folder}/lib/ext/portal-service.jar</systemPath>
                </dependency>
                <dependency>
                    <groupId>com.liferay.portal</groupId>
                    <artifactId>portal-impl</artifactId>
                    <version>6.2.1</version>
                    <scope>system</scope>
                    <systemPath>${liferay.tomcat.folder}/webapps/ROOT/WEB-INF/lib/portal-impl.jar</systemPath>
                </dependency>
                <dependency>
